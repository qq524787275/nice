<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="color"
            type="com.zhuzichu.library.comment.color.ColorConfig"></variable>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhuzichu.library.widget.StatusBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white_f8f8f8" />

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:qmui_topbar_bg_color="@color/color_white_f8f8f8"
            app:qmui_topbar_left_back_drawable_id="@mipmap/icon_tobar_cancel"
            app:qmui_topbar_title_color="@color/color_grey_333333" />

    </LinearLayout>
</layout>