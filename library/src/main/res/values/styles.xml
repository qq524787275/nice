<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- 配置Android提供的theme -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:listPreferredItemHeight">?attr/qmui_list_item_height_higher</item>
        <item name="android:listPreferredItemHeightSmall">?attr/qmui_list_item_height</item>

        <!-- 配置qmui提供的theme -->
        <item name="qmui_config_color_blue">@color/app_color_blue</item>
        <item name="qmui_content_spacing_horizontal">20dp</item>
        <item name="qmui_content_padding_horizontal">@dimen/qmui_content_spacing_horizontal</item>

        <item name="QMUITopBarStyle">@style/NCTopBar</item>

        <!-- 配置app自己的theme -->
        <item name="app_primary_color">@color/colorPrimary</item>
        <item name="app_content_bg_color">@color/qmui_config_color_white</item>

        <item name="chipViewStyle">@style/Widget.ChipView</item>
    </style>


    <style name="NCTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">?attr/app_primary_color</item>
        <item name="qmui_topbar_title_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_subtitle_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/topbar_btn_color</item>
        <item name="qmui_topbar_height">?actionBarSize</item>
        <item name="qmui_topbar_image_btn_height">48dp</item>
    </style>

    <style name="Widget.ChipView" parent="@android:style/Widget">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="outlineWidth">1dp</item>
        <item name="clearIcon">@drawable/tag_clear</item>
        <item name="foreground">?selectableItemBackground</item>
        <item name="showIcons">true</item>
    </style>
</resources>
