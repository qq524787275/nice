<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            style="@style/PanelItem"
            android:drawableTop="@drawable/msg_photo"
            android:text="相册" />

        <TextView
            style="@style/PanelItem"
            android:drawableTop="@drawable/msg_video"
            android:text="拍摄" />

        <TextView
            style="@style/PanelItem"
            android:drawableTop="@drawable/msg_location"
            android:text="位置" />

        <TextView
            style="@style/PanelItem"
            android:drawableTop="@drawable/msg_location"
            android:text="位置" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            style="@style/PanelItem"
            android:drawableTop="@drawable/msg_photo"
            android:text="相册" />

        <TextView
            style="@style/PanelItem"
            android:drawableTop="@drawable/msg_video"
            android:text="拍摄" />

        <TextView
            style="@style/PanelItem"
            android:drawableTop="@drawable/msg_location"
            android:text="位置" />

        <TextView
            style="@style/PanelItem"
            android:drawableTop="@drawable/msg_location"
            android:text="位置" />
    </LinearLayout>
</LinearLayout>